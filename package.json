{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "gv-api-web": "git+https://github.com/GenesisVision/gv-api-web.git#development",
    "gv-react-components": "^0.0.26"
  },
  "scripts": {
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,scss,md}": [
        "prettier --write",
        "git add"
      ],
      "*.js": [
        "import-sort --write",
        "git add"
      ]
    }
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "module"
    }
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">0.25%",
      "not op_mini all",
      "ie 11"
    ]
  }
}
